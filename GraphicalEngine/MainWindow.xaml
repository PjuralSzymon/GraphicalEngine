<Window x:Class="GraphicalEngine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicalEngine"
        mc:Ignorable="d"
        Title="Graphical Engine - Szymon Świderski" Height="450" Width="800">
    <Grid>
        <Grid Grid.Row="1" Background="LightGray" SizeChanged="Grid_SizeChanged">
            <Image 
                Stretch="Uniform" 
                Name="MainImage">
            </Image>
            <TextBlock Name="InfoBox" Foreground="White" >
                FPS: 60
            </TextBlock>
        </Grid>
    </Grid>
</Window>
